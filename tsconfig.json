{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2016", "es2017.object", "es2017.string"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "electron/dist",
    "removeComments": true,
    "rootDir": "electron/src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",

    // Fix for Electron double definitions
    "baseUrl": ".",
    "paths": {
      "electron": ["./node_modules/electron/electron.d.ts"]
    }
  },
  "exclude": ["electron/dist", "electron/instrumented-code", "node_modules", "electron/node_modules", "wrap"]
}
